/* timer/list/list.wxss */

.nothing {
    width: 100%;
    text-align: center;
    height: 100vh;
    color: #9b9b9b;
    font-size: 24rpx;
}

.nothing image {
    width: 256rpx;
    height: 256rpx;
    display: block;
    margin: 20% auto 20rpx;
}

.nothing .promty {
    color: #e03236;
    font-weight: bold;
    font-size: 28rpx;
    display: block;
    padding: 10rpx;
    border: 1px solid #e03236;
    width: 150rpx;
    margin: 10rpx auto;
    border-radius: 40rpx;
}

.list {
    padding: 20rpx 50rpx;
    font-size: 28rpx;
    position: relative;
}

.list::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background: #e6e6e6;
    transform: scaleY(0.5)
}

.list:last-child::after {
    background: transparent;
}

.name {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    display: block;
}

.grey {
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 100%;
    font-size: 24rpx;
    padding-top: 10rpx;
}

.footer-fixed {
    text-align: center;
    font-size: 28rpx;
}

.footer-fixed .img {
    width: 48rpx;
    height: 48rpx;
    display: block;
    margin: 10rpx auto 0rpx;
}

.flowBox {
    position: fixed;
    bottom: 200rpx;
    right: 20rpx;
    background: #fff;
    text-align: center;
    cursor: pointer;
}

.flowBox:hover {
    background: transparent;
}

.flowBox image {
    width: 64rpx;
    height: 64rpx;
    display: block;
    margin: auto;
}

.flowBox text {
    font-size: 24rpx;
    color: #666;
}