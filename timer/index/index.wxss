/* timer/index/index.wxss */

.banner {
    width: 100%;
    height: 50vh;
    background: #06BD04;
    padding-top: 50rpx;
}

.timer {
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    border: 5px solid #fff;
    margin: 0rpx auto;
    text-align: center;
    color: #fff;
    font-size: 40rpx;
    line-height: 300rpx;
    position: relative;
}

.unit {
    font-size: 24rpx;
}

.status {
    text-align: center;
    width: 100%;
    color: #fff;
    display: block;
    padding-top: 30rpx;
}

.desc {
    font-size: 24rpx;
    margin: 30rpx 40rpx 10rpx;
    display: block;
    color: #fff;
    text-align: center;
}

.btn {
    width: 300rpx;
    margin-top: 30rpx;
}

.footer-fixed {
    text-align: center;
    font-size: 28rpx;
}

.footer-fixed .img {
    width: 48rpx;
    height: 48rpx;
    display: block;
    margin: 10rpx auto 0rpx;
}