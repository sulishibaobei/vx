/* timer/newTask/newTask.wxss */

.list {
    padding: 20rpx 50rpx;
    font-size: 28rpx;
    position: relative;
}

.list::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background: #e6e6e6;
    transform: scaleY(0.5)
}

.list:last-child::after {
    background: transparent;
}

.list text {
    line-height: 56rpx;
    color: #666;
    white-space: nowrap;
}

.w100 {
    width: 100%;
}

.btn-area {
    padding: 10rpx;
    display: flex;
    margin-top: 300rpx;
}

.btn-area button {
    width: 300rpx;
}


/**
* 日期插件
*/

.picker {
    line-height: 56rpx;
}

.pickerHidden {
    display: none;
}