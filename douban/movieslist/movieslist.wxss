/* douban/movieslist/movieslist.wxss */

.movie-box {
    position: relative;
    padding: 20rpx;
    background: #ffff;
}

.movie-box::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0px;
    width: 100%;
    height: 1px;
    background: #e6e6e6;
    transform: scaleY(0.5);
}

.img {
    height: 180rpx;
    width: 160rpx;
}

.movie-name {
    font-size: 30rpx;
    font-weight: bold;
    color: #000;
    line-height: 56rpx;
}

.movie-nick {
    font-size: 26rpx;
    color: #333;
    line-height: 42rpx;
}

.movie-director {
    font-size: 26rpx;
    color: #666;
    line-height: 42rpx;
}

.movie-type {
    font-size: 26rpx;
    color: #666;
    line-height: 42rpx;
}

.pl10 {
    padding-left: 20rpx;
}

.movie-score {
    color: #fff;
    font-size: 26rpx;
    font-weight: bold;
    box-sizing: border-box;
    padding: 6rpx 10rpx;
    background: rgba(241, 41, 41, .6);
    float: right;
    border-radius: 22rpx;
}

.tips {
    color: #9b9b9b;
    text-align: center;
    font-size: 24rpx;
    padding-top: 20rpx;
}