/* douban/search/search.wxss */

@import "../movieslist/movieslist.wxss";
.header {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 30;
    width: 100%;
    background: #f5f5f5;
}

.search_icon {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    top: 25rpx;
    left: 25rpx;
}

.search {
    height: 56rpx;
    border: 1px solid #ddd;
    font-size: 28rpx;
    padding-left: 60rpx;
    width: 650rpx;
    margin: 10rpx auto;
    border-radius: 22rpx;
}

.content {
    margin-top: 82rpx;
}

.footer-fixed {
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    height: 100rpx;
    width: 100%;
    box-shadow: 0 -2px 3px 0 rgba(137, 137, 137, .4);
    z-index: 1;
}

.footer-img {
    width: 54rpx;
    height: 54rpx;
    display: block;
    margin: 5rpx auto;
}

.footer-title {
    font-size: 24rpx;
    text-align: center;
    display: block;
}

.footer-title.on {
    color: #e03236;
}

.navigator-hover {
    color: #e03236;
}