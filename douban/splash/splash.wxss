/* douban/splash/splash.wxss */

page {
    height: 100%;
}

.content {
    position: relative;
    height: 100%;
}

.splash {
    height: 100%
}

.slide-image {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.start {
    position: absolute;
    width: 200rpx;
    height: 68rpx;
    line-height: 68rpx;
    border: 1px solid #ffffff;
    background: rgba(241, 241, 241, .5);
    color: #fff;
    left: 50%;
    bottom: 150rpx;
    margin-left: -100rpx;
    font-size: 28rpx;
    border-radius: 22rpx;
}