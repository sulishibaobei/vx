/* pages/detail/page.wxss */
.detail-items{
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  position: absolute;

}
.detail-items .detail-img{
  width: 100%;
  height: 100%;
}
.detail-title{
   position: absolute;
   bottom:0rpx;
   left:20rpx;
   right:20rpx;
   padding: 10rpx;
   color:#ffffff;
   text-align: right;
   overflow: hidden;
}
.detail-atricle{
   overflow: hidden;
   text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  font-size: 30rpx;
 
}
.detail-content{
  width: 90%;
  color:#333333;
  font-size:30rpx;
  line-height: 48rpx;
  padding: 20rpx 30rpx;
  margin-top: 400rpx;
  text-indent: 2em;
  text-align: justify;
  word-break: break-all;
  flex-wrap:warp;
  white-space:pre-wrap;
}

/* 返回顶部 */
 .goTop{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 50rpx;
  background: rgba(255,255,255,1);
  right: 30rpx;
  border-radius: 50%;

}
 
