/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.flex .flex-one {
    -webkit-box-flex: 0;
    -webkit-flex: none;
    -ms-flex: none;
    flex: none;
}

.flex .flex-auto {
    -webkit-box-flex: 1;
    -webkit-flex: auto;
    -ms-flex: auto;
    flex: auto;
}

.footer-fixed {
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    height: 100rpx;
    width: 100%;
    box-shadow: 0 -2px 3px 0 rgba(137, 137, 137, .4);
    z-index: 1;
}